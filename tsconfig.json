{
    "compileOnSave": false,
    "compilerOptions": {
        "importHelpers": true,
        "target": "es5",
        "lib": [
            "es2018",
            "dom"
        ],
        "baseUrl": "./src",
        "module": "esNext",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "preserveSymlinks": true,
        "paths": {
            "@common/*": [
                "app/@common/*"
            ],
            "@models/*": [
                "app/@models/*"
            ],
            "@services/*": [
                "app/@services/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types"
        ],
        "strictNullChecks": true
    }
}